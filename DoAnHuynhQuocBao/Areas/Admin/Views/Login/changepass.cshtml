@model DoAnHuynhQuocBao.Models.User
@{
    ViewBag.Title = "changepass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">CHANGE YOUR PASS</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    <form action="~/Admin/Login/changepass" method="post" class="signin-form">
                        <input type="hidden" class="form-control" value="@Model.IDUser" name="IDUser" required>
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input type="text" class="form-control" value="@Model.UserName" name="UserName" required>
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu mới</label>
                            <input id="password-field" type="password" class="form-control" value="@Model.Pass" name="Pass" required>
                        </div>
                        <div class="form-group">
                            <label>Họ và tên</label>
                            <input type="text" class="form-control" value="" name="@Model.Name" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary submit px-3">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



